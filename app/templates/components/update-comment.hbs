{{#if openUpdateCommentForm}}
<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input  class="form-control" value=name id=name}}
  </div>
  <div class="form-group">
    <label for="content">Comment</label>
    {{input class="form-control" value=content id=content}}
  </div>
<br>
  <button {{action 'saveUpdate' comment}}>Save</button>
</form>
{{else}}
  <button class="btn btn-xs btn-btn" {{action 'updateComment'}}>Update</button>
{{/if}}
