{{#if openUpdateVendorForm}}
  <form>
    <div class='form-group'>
      <label for="name">Name</label>
      {{input class='form-control' id="name" value=name}}
    </div>

    <div class='form-group'>
      <label for="image">Image</label>
      {{input class='form-control' id="image" value=image}}
    </div>

    <div class='form-group'>
      <label for="description">Description</label>
      {{input class='form-control' id="description" value=description}}
    </div>

    <div class='form-group'>
      <label for="website">Website</label>
      {{input class='form-control' id="website" value=website}}
    </div>

    <div class='form-group'>
      <label for="product">Product</label>
      {{input class='form-control' id="product" value=product}}
    </div>

    <button class='btn btn-xs btn-success' {{action 'update' vendor}}>Save</button>
  </form>
{{else}}
  <button class='btn btn-sm btn-btn' {{action 'addVendorForm'}}>Update Vendor</button>
{{/if}}
